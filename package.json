    "bootstrap": "^5.3.1",
    "cheerio": "^1.0.0",
    "env-var": "^7.5.0",
    "express": "^4.20.0",
    "glob": "^11.0.0",
    "iso-639-1": "^3.1.3",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.15",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.4",
    "react-bootstrap-icons": "^1.11.4",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "undici": "^6.19.8",
    "uuid": "^10.0.0",
    "vite-express": "0.19.0",
    "wouter": "^3.3.5"
