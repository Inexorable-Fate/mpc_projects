    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "ajv": "^8.17.1",
    "commander": "^12.1.0",
    "eslint": "^9.10.0",
